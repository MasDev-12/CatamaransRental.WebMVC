
@model IEnumerable<CatamaransRental.Domain.ViewModel.CatamaranViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

 <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                    <img class="cardcard-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">Модель: @item.Model</p>
                        <p class="card-text">Вместительность: @item.Capacity</p>
                        <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a type="btn btn-success" asp-controller="Catamaran" asp-action="Detail" asp-route-model="@item.Model" class="btn btn-sm btn-outline-secondary">View</a>
                                @if (User.Identity.IsAuthenticated && User.IsInRole("Сontroller"))
                                {
                                        <a type="btn btn-success" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Model" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a type="btn btn-success" asp-controller="Club" asp-action="Delete" asp-route-id="@item.Model" class="btn btn-sm btn-outline-secondary">Delete</a>
                                }
                        </div>
                        <small class="text-muted">Цена: @item.PricePerHour</small>
                        </div>
                    </div> 
                    </div>
                </div>
            }
      </div>
    </div>
  </div>
